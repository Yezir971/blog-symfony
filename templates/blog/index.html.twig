{% extends 'base.html.twig' %}

{% block title %}Accueil | comment faire ?{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container">
    <h2 class="text-center">Comment faire pour...</h2>
    <ul id="task-list" class="d-flex justify-content-center">
        {% if articles == null %}
             <li class="d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="assets/img/logo_blog.webp" alt="ceci est ma cover">
                    <div class="card-body">
                        <h2 class="card-title">Titre : Rédiger vos meilleurs articles</h2>
                        <h3 card-subtitle mb-2>Auteur : Sexy James</h3>
                        <p class="card-text articleTranslate">Avec Comment faire devenez les pros de la rédaction facilement et rapidement</p>
                        <p class="mt-5">Publié le : 22/06/2000</p>
                    </div>
                    <a href="{{ path('app_login') }}" class="btn btn-success">Voir</a>
                </div>
            </li>
        {% endif %}
        {% for article in articles %}
            <li >
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="assets/img/logo_blog.webp" alt="ceci est ma cover">
                    <div class="card-body">
                        <h2 class="card-title">Titre : {{ article.title }}</h2>
                        <h3 card-subtitle mb-2>Auteur : {{ article.author }}</h3>
                        <p class="card-text articleTranslate">{{ article.comment | slice(0, 70) ~ "..." }}</p>
                        <p class="mt-5">Publié le : {{ article.publicationDate | date('d-m-Y') }} à {{article.publicationDate |  date('H:i:s')  }}</p>
                    </div>
                    <a href="{{ path('app_login') }}" class="btn btn-success">Voir</a>
                </div>
            </li>
        {% endfor %} 
    </ul>

</div>
{% endblock %}
