{% extends 'layouts/layout-full-width.html.twig' %}

{% block title %}connexion | Comment faire ?{% endblock %}

{% block contentFullWidth %}
{{ include('template-parts/general-notifs.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 mx-auto p-0">
                {% if error %}
                    <div class="alert alert-danger mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div>
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
            </div>
            <div class="col-sm-8 mx-auto border shadow-lg">
                
                <div class="row">
                    <div class="col-sm-6 overflow-hidden p-0">
                        <img src="{{ asset('assets/img/logo_blog.webp') }}" alt="connection" class="logo">
                    </div>

                    <div class="col">
                        <form method="post" class="h-100">
                            

                            
                            <div class="d-flex flex-column justify-content-center align-items-start h-100">
                                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                                <label for="username">Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-4" autocomplete="email" required autofocus>

                                <label for="password">Password</label>
                                <input type="password" name="_password" id="password" class="form-control mb-5" autocomplete="current-password" required>

                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >

                                <button class="btn btn-lg btn-success" type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 mx-auto p-0 mt-5">
                <p class="text-center">
                    Pas encore de compte?
                    <a href="{{ path('app_register') }}" class="text-decoration-none"><span> Inscrivez vous.</span></a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
